{
    "dataset_reader": {
        "type": "sharded",
        "base_reader": {
            "type": "simple_language_modeling",
            "end_tokens": [
                "</S>"
            ],
            "max_sequence_length": 400,
            "start_tokens": [
                "<S>"
            ],
            "token_indexers": {
                "token_characters": {
                    "type": "elmo_characters"
                },
                "tokens": {
                    "type": "single_id"
                }
            },
            "tokenizer": {
                "type": "just_spaces"
            }
        }
    },
    "model": {
        "type": "language_model",
        "bidirectional": true,
        "contextualizer": {
            "type": "bidirectional_language_model_transformer",
            "dropout": 0.1,
            "hidden_dim": 2048,
            "input_dim": 512,
            "input_dropout": 0.1,
            "num_layers": 6
        },
        "dropout": 0.1,
        "num_samples": 8192,
        "sparse_embeddings": false,
        "text_field_embedder": {
            "token_embedders": {
                "token_characters": {
                    "type": "character_encoding",
                    "embedding": {
                        "embedding_dim": 16,
                        "num_embeddings": 262
                    },
                    "encoder": {
                        "type": "cnn-highway",
                        "activation": "relu",
                        "do_layer_norm": true,
                        "embedding_dim": 16,
                        "filters": [
                            [
                                1,
                                32
                            ],
                            [
                                2,
                                32
                            ],
                            [
                                3,
                                64
                            ],
                            [
                                4,
                                128
                            ],
                            [
                                5,
                                256
                            ],
                            [
                                6,
                                512
                            ],
                            [
                                7,
                                1024
                            ]
                        ],
                        "num_highway": 2,
                        "projection_dim": 512,
                        "projection_location": "after_highway"
                    }
                },
                "tokens": {
                    "type": "empty"
                }
            }
        }
    },
    "train_data_path": "/home/vincent/dev/5_EmbeddingsFromLanguageModels",
    "trainer": {
        "learning_rate_scheduler": {
            "type": "noam",
            "model_size": 512,
            "warmup_steps": 6000
        },
        "num_epochs": 10,
        "num_gradient_accumulation_steps": 4,
        "optimizer": {
            "type": "dense_sparse_adam"
        },
        "use_amp": true
    },
    "vocabulary": {
        "type": "from_files",
        "directory": "/home/vincent/dev/vocabulary"
    },
    "data_loader": {
        "batch_sampler": {
            "type": "bucket",
            "batch_size": 64
        },
        "max_instances_in_memory": 6400
    },
    "distributed": {
        "cuda_devices": 0
    }
}